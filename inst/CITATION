citHeader("To cite myrpackage in publications use:")

year <- format(Sys.Date(), "%Y")
version <- meta$Version

bibentry(
  bibtype = "Manual",
  title = "myrpackage: Multilingual Greeting and Farewell Functions",
  author = person(given = "Diogo", family = "Ribeiro",
                  email = "dfr@esmad.ipp.pt",
                  role = c("aut", "cre"),
                  comment = c(ORCID = "0009-0001-2022-7072",
                              affiliation = "ESMAD - Instituto PolitÃ©cnico do Porto")),
  year = year,
  note = paste("R package version", version),
  url = "https://github.com/DiogoRibeiro7/myrpackage",
  doi = "", # Add DOI when available
  textVersion = paste0(
    "Ribeiro, D. (", year, "). ",
    "myrpackage: Multilingual Greeting and Farewell Functions. ",
    "R package version ", version, ". ",
    "https://github.com/DiogoRibeiro7/myrpackage"
  )
)

citFooter("Please cite this package when using it for data analysis or research.")
